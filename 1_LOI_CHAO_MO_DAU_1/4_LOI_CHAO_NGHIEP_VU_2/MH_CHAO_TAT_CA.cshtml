@{

    Layout = null;
    var Loi_chao = XL_NGHIEP_VU.Tao_loi_chao_tat_ca();

    var Chuoi_HTML_LOI_CHAO = $"<h3>{Loi_chao}</h3>" + "<br/>Đây là trang <b>web nghiệp vụ 2 </b> của tôi";
    var n = XL_NGHIEP_VU.So_random(0, 4);
    Chuoi_HTML_LOI_CHAO = $"<img src='HINH/NGUOI_DUNG_{n}.jpg' width='100' height='100'/><br>" + Chuoi_HTML_LOI_CHAO
        +"<br> Danh sách các nhóm hàng hiện nay ";


    //ở hàm xử lý nghiệp vụ đọc toàn bộ file Nhom_hang, add nó vào list ở đây là xuất tất cả các nội dụng trong list
    // và hình ảnh của nó( hình ảnh lưu ngang hàng với file bin khác với windoform toàn là con của file bin 
    var danh_sach_nhom_hang = XL_LUU_TRU.doc_nhom_hang();
    danh_sach_nhom_hang.ForEach(hang =>
    Chuoi_HTML_LOI_CHAO += $"<br> <b>{hang.ten}</b> <br>"
    +  $"<br> <img src='HINH/{hang.ma_so}.jpg' width='100' height='50'/><br>" );

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MH_CHAO_TAT_CA</title>
</head>
<body>
    @Html.Raw(Chuoi_HTML_LOI_CHAO)


</body>
</html>

